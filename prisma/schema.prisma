generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentMethod {
  BANK_TRANSFER
  COD
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  phone         String?
  address       String?   // Keep for backward compatibility / simple register
  city          String?   // Keep for backward compatibility
  role          Role      @default(USER)
  orders        Order[]
  addresses     Address[]
  wishlist      Wishlist[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Address {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  name      String   // Recipient name
  address   String
  city      String
  phone     String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Wishlist {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  image       String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id           String           @id @default(cuid())
  name         String
  slug         String           @unique
  description  String?
  price        Float            // Current/sale price
  comparePrice Float?           // Original price (shows strikethrough when set)
  images       String[]
  featured     Boolean          @default(false)
  category     Category         @relation(fields: [categoryId], references: [id])
  categoryId   String
  variants     ProductVariant[]
  orderItems   OrderItem[]
  wishlistedBy Wishlist[]
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

model ProductVariant {
  id            String      @id @default(cuid())
  product       Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId     String
  size          String?
  color         String?
  stock         Int         @default(0)
  minStock      Int         @default(5)  // Low stock alert threshold
  priceModifier Float       @default(0)
  orderItems    OrderItem[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Order {
  id                String        @id @default(cuid())
  orderNumber       String        @unique
  user              User?         @relation(fields: [userId], references: [id])
  userId            String?
  customerName      String
  customerEmail     String
  customerPhone     String
  shippingAddress   String
  city              String
  postalCode        String?
  items             OrderItem[]
  subtotal          Float
  discount          Float         @default(0)
  couponCode        String?
  courier           String?       // Carrier name e.g. TCS, Leopard
  trackingId        String?       // External tracking IDs
  shipping          Float         @default(0)
  total             Float
  paymentMethod     PaymentMethod
  paymentStatus     String        @default("pending")
  paymentScreenshot String?       // Bank transfer proof screenshot
  status            OrderStatus   @default(PENDING)
  notes             String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

enum CouponType {
  PERCENTAGE
  FIXED_AMOUNT
}

model Coupon {
  id          String     @id @default(cuid())
  code        String     @unique
  type        CouponType @default(PERCENTAGE)
  value       Float      // Percentage (e.g. 10 for 10%) or Fixed Amount
  startDate   DateTime?
  endDate     DateTime?
  usageLimit  Int?       // Total number of times this coupon can be used
  usedCount   Int        @default(0)
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model OrderItem {
  id        String          @id @default(cuid())
  order     Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
  product   Product         @relation(fields: [productId], references: [id])
  productId String
  variant   ProductVariant? @relation(fields: [variantId], references: [id])
  variantId String?
  quantity  Int
  price     Float
  createdAt DateTime        @default(now())
}

model PaymentSettings {
  id                  String   @id @default(cuid())
  bankTransferEnabled Boolean  @default(true)
  codEnabled          Boolean  @default(true)
  requireScreenshot   Boolean  @default(false) // Require screenshot for bank transfer
  bankName            String?
  accountTitle        String?
  accountNumber       String?
  iban                String?
  bankInstructions    String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// Site-wide settings for hero, theming, and branding
model SiteSettings {
  id               String   @id @default("default")
  
  // Hero Settings
  heroMode         String   @default("image") // "image" | "slider"
  heroImage        String?
  heroSliderImages String[] // Up to 5 images
  heroTitle        String   @default("Discover Quality Products at Amazing Prices")
  heroSubtitle     String   @default("Shop the latest trends in electronics, fashion, home essentials, and more.")
  
  // Theme Colors (HSL format)
  primaryColor     String   @default("221.2 83.2% 53.3%")
  secondaryColor   String   @default("210 40% 96.1%")
  accentColor      String   @default("210 40% 96.1%")
  
  // Product Display Settings
  colorSelectionMode String @default("text") // "text" | "swatch" | "image"
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

// Media library for centralized image management
model Media {
  id          String   @id @default(cuid())
  filename    String
  originalUrl String?  // Original URL if imported from external source
  url         String   // Local stored file URL
  mimeType    String
  size        Int      // File size in bytes
  width       Int?
  height      Int?
  createdAt   DateTime @default(now())
}
